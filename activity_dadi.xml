<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dadi">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        android:layout_marginTop="15dp"
        android:layout_margin="16dp">

        <!-- Layout inside the card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Restaurant Name -->
            <TextView
                android:id="@+id/restaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dadi Ka Khazana"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000" />

            <!-- Restaurant Address -->
            <TextView
                android:id="@+id/restaurantAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sector 14, Kharghar"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textColor="#757575" />

            <!-- Restaurant Rating -->
            <TextView
                android:id="@+id/restaurantRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.1"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textColor="#757575" />

            <!-- Meal Type -->
            <TextView
                android:id="@+id/restaurantMealType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Only Dinner"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textColor="#757575" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best in North Indian"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="175dp"
        android:textStyle="bold"
        android:textSize="17dp"/>


    <ImageView
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:src="@drawable/logo_nv"
        android:layout_marginTop="175dp"
        android:layout_marginLeft="300dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly and Weekly Meals"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="55dp"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chhole Bhature"
        android:textSize="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="320dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38.5dp"
        android:textStyle="bold"
        android:text="Rs. 100"
        android:layout_marginTop="340dp"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/vegthali"
        android:layout_marginTop="295dp"
        android:layout_marginLeft="130dp"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Subscribe"
        android:textSize="15dp"
        android:id="@+id/vaishali_veg_subs"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="320dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chicken Meal"
        android:textSize="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="430dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38.5dp"
        android:textStyle="bold"
        android:text="Rs. 150"
        android:layout_marginTop="450dp"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/nonveg"
        android:layout_marginTop="405dp"
        android:layout_marginLeft="130dp"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Subscribe"
        android:textSize="15dp"
        android:id="@+id/vaishali_nonveg_subs"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="420dp"/>



</RelativeLayout>